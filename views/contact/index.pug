extends ../layouts/common

block content

  h3.text-muted Nếu có bất kỳ câu hỏi hay yêu cầu gì, xin hãy liên hệ với mình theo form dưới đây:

  if errors
    each error in errors
      .alert.alert-danger.col-sm-6= error

  form.col-sm-12.col-lg-6.mt-5(action="/contact", method="POST")
    .form-group
      label(for='name') Tên của bạn (bắt buộc):
      input#name.form-control(type='text', name="name", placeholder='Tên của bạn...', value=values ? values.name : '')
    .form-group
      label(for='email') Email address (bắt buộc):
      input#email.form-control(type='email', name="email", placeholder='name@example.com', value=values ? values.email : '')
    .form-group
      label(for='caption') Tiêu đề:
      input#caption.form-control(type='text' , name="caption", placeholder='Tiêu đề...', value=values ? values.caption : '')
    .form-group
      label(for='content') Nội dung:
      textarea#content.form-control(rows='3' , name="content", placeholder='Viết nội dung ở đây...', value=values ? values.content : '')

    button.btn.btn-primary Send